
@model List<GetProductsQueryResult>
@{
    ViewData["Title"] = "Index";
}

<h3>Ürünler</h3>

@{
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Ürün Resmi</th>
        <th>Ürün Adı</th>
        <th>Ürün Fiyatı</th>
        <th>Ürün Kategorisi</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" class="img-thumbnail" /> </td>
            <td>@item.ProductName</td>
            <td>@item.Price ₺</td>
            <td>@item.Category.CategoryName</td>
            <td>
                <a href="/Admin/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a>
                <a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn btn-info">Güncelle</a>

            </td>
        </tr>


    }

</table>
<a href="/Admin/Product/CreateProduct" class="btn btn-primary">Yeni Ürün Ekle</a>